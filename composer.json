{
    "name": "dpitchford1/media-folders",
    "description": "WordPress Media Folders Plugin - Efficient media library organization",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "David Pitchford",
            "email": "dpitchford1@github.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "composer/installers": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "phpstan/phpstan": "^1.10",
        "yoast/phpunit-polyfills": "^1.0",
        "wp-phpunit/wp-phpunit": "^6.5",
        "brain/monkey": "^2.6",
        "mockery/mockery": "^1.5",
        "10up/wp_mock": "^0.4.2"
    },
    "autoload": {
        "psr-4": {
            "MediaFolders\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MediaFolders\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html tests/coverage",
        "phpcs": "phpcs",
        "phpstan": "phpstan analyse",
        "check": [
            "@phpcs",
            "@phpstan",
            "@test"
        ],
        "install-wp-tests": [
            "bash bin/install-wp-tests.sh wordpress_test root '' localhost latest"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}